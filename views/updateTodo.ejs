<%- include('partials/header') %>
    <div class="container">
        <h2 class="todo-title">Update todo</h2>
        <div>
            <a href="/" class="btn">Back</a>
        </div>
        <br>

        <form action="/update-todo/<%= todo._id %>" method="post">
            <div class="update-todo">
                <div class="form-group">
                    <label for="title" class="text-align">Title</label>
                    <input type="text" name="title" value="<%= todo.title %>" id="title" placeholder="type todo here">
                </div>
                <div class="form-group">
                    <label for="desc" class="text-align">Description</label>
                    <input type="text" name="desc" value="<%= todo.desc %>" id="desc" placeholder="type description here">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn">save</button>
                </div>
            </div>
        </form>
    </div>

    <%- include('partials/footer') %>